---
// src/pages/404.astro
import { Image } from "astro:assets";
import MainLayout from "../layouts/MainLayout.astro";
import { withBase } from "../utils/helpers";
import heroImage from "../assets/images/pixeltrue-space-discovery.svg";
import siteConfig from "../site.config";
---

<MainLayout
  activePage="404"
  pageTitle={`${siteConfig.title} | 404`}
  showSubscribeForm={false}
>
  <div class="page-content flex flex-col items-center justify-center">
    <h1 class="text-4xl font-bold leading-tight">404</h1>

    <Image
      class="cover-img my-6 rounded-3xl"
      src={heroImage}
      alt="Astronaut in space"
      width={400}
      height={300}
      loading="eager"
      decoding="async"
      sizes="(max-width: 640px) 90vw, 400px"
    />

    <p class="mb-2">🧑‍🚀: Houston, we have a problem.</p>
    <p>
      We couldn't find that link. Verify the address or
      <a class="underline underline-offset-2 font-medium" href={withBase("/")}>
        Go Back Home
      </a>
    </p>
  </div>
</MainLayout>
