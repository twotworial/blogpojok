---
import siteConfig from "../site.config";
import { withBase } from "../utils/helpers";

type SiteIdentityProps = {
  logoWidth?: number;
  logoHeight?: number;
  loading?: "eager" | "lazy";
  textSize?: "text-base" | "text-xl";
  class?: string;
};

const {
  logoWidth = 32,
  logoHeight = 32,
  loading = "eager",
  textSize = "text-base",
  class: customClass,
}: SiteIdentityProps = Astro.props;

const logoSrc = withBase("/TwotworialSQ.webp"); // file dari /public
---

<div class:list={["flex items-center gap-2", customClass]}>
  <img
    src={logoSrc}
    alt={`${siteConfig.title} logo`}
    width={logoWidth}
    height={logoHeight}
    loading={loading}
    decoding="async"
    class="block rounded"
  />
  <span class:list={[textSize, "font-semibold tracking-tight"]}>
    {siteConfig.title}
  </span>
</div>
