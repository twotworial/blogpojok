---
import "../styles/global.css";

import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import Subscribe from "../components/Subscribe.astro";
import { withBase } from "../utils/helpers";
import siteConfig from "../site.config";

type LayoutProps = {
  pageTitle: string;
  activePage: string;
  showSubscribeForm?: boolean;
};
const { pageTitle, activePage, showSubscribeForm = true } = Astro.props as LayoutProps;
---

<!doctype html>
<html lang="id" class="antialiased break-words">
  <head>
    <meta charset="utf-8" />
    <!-- viewport lengkap untuk mobile & notch -->
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta name="generator" content={Astro.generator} />

    <title>{pageTitle}</title>

    <!-- Favicon & sitemap -->
    <link rel="icon" href={withBase("/space-ahead-logo.png")} />
    <link rel="sitemap" href={withBase("/sitemap-index.xml")} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Sigmar&family=Kanit:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap"
      rel="stylesheet"
    />

    <!-- RSS -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title={siteConfig.title + " - RSS Feed"}
      href={new URL(withBase("/rss.xml"), Astro.site)}
    />
    {Astro.head}
  </head>

  <body>
    <!-- Swup container harus full-width -->
    <main id="swup" class="w-full min-h-screen">
      <!-- Konten dibatasi di inner-container agar swup nggak “mengotak” layout -->
      <div class="mx-auto max-w-3xl px-4">
        <Nav activePage={activePage} />
        <slot />
        {showSubscribeForm && <Subscribe class="my-12 w-full" />}
        <Footer />
      </div>
    </main>
  </body>
</html>
