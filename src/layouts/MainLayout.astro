---
import "../styles/global.css";

import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import Subscribe from "../components/Subscribe.astro";
import { withBase } from "../utils/helpers";
import siteConfig from "../site.config";

type Crumb = { name: string; href: string };

type LayoutProps = {
  pageTitle: string;
  activePage: string;
  showSubscribeForm?: boolean;
  description?: string;
  image?: string;           // relative OK, akan dibuat absolut
  noindex?: boolean;
  /** Opsional: ganti judul crumb terakhir (mis. judul artikel). */
  breadcrumbTitle?: string;
};

const {
  pageTitle,
  activePage,
  showSubscribeForm = true,
  description = siteConfig.description,
  image = siteConfig.image?.src ?? "/TwotworialSQ.webp",
  noindex = false,
  breadcrumbTitle,
} = Astro.props as LayoutProps;

/** Pastikan base domain absolut (mengarah ke https://twotworial.com via astro.config.mjs) */
const siteBase = Astro.site ?? siteConfig.website ?? "https://twotworial.com";

/** Title final */
const fullTitle = `${pageTitle}`;

/** Canonical absolut (tanpa query/hash) */
const urlObj = new URL(Astro.url, siteBase);
urlObj.search = "";
urlObj.hash = "";
const canonicalUrl = urlObj.href;

/** OG/Twitter image absolut */
const imagePath = withBase(image);
const ogImageAbs = new URL(imagePath, siteBase).href;

/* =========================
   Breadcrumb (JSON-LD only)
   ========================= */
const path = Astro.url.pathname.replace(/\/+$/, "") || "/";
const segments = path.split("/").filter(Boolean);

function humanize(seg: string) {
  return seg.replace(/-/g, " ").replace(/\b\w/g, (m) => m.toUpperCase());
}

const crumbs: Crumb[] = [{ name: "Home", href: new URL("/", siteBase).href }];

if (segments.length > 0) {
  let acc = "";
  segments.forEach((seg, idx) => {
    acc += `/${seg}`;
    const isLast = idx === segments.length - 1;
    const name = isLast ? (breadcrumbTitle || pageTitle || humanize(seg)) : humanize(seg);
    const href = new URL(acc, siteBase).href;
    crumbs.push({ name, href });
  });
}

const showBreadcrumbJSONLD = path !== "/";

const breadcrumbJSONLD = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: crumbs.map((c, i) => ({
    "@type": "ListItem",
    position: i + 1,
    name: c.name,
    item: c.href,
  })),
};

/** Website & Organization JSON-LD (sekali di layout) */
const websiteJSONLD = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: siteConfig.title,
  url: new URL("/", siteBase).href,
  potentialAction: {
    "@type": "SearchAction",
    target: `${new URL("/", siteBase).href}?s={search_term_string}`,
    "query-input": "required name=search_term_string",
  },
};
const organizationJSONLD = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: siteConfig.title,
  url: new URL("/", siteBase).href,
  logo: new URL(siteConfig.image?.src ?? "/TwotworialSQ.webp", siteBase).href,
};
---

<!doctype html>
<html lang="id" class="antialiased break-words">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta name="generator" content={Astro.generator} />

    <!-- Title & Meta Description -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />

    <!-- Canonical (domain utama) -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Robots -->
    {noindex ? (
      <>
        <meta name="robots" content="noindex,nofollow,max-image-preview:large" />
        <meta name="googlebot" content="noindex,nofollow" />
      </>
    ) : (
      <>
        <meta name="robots" content="index,follow,max-snippet:-1,max-image-preview:large,max-video-preview:-1" />
        <meta name="googlebot" content="index,follow" />
      </>
    )}

    <!-- Open Graph -->
    <meta property="og:site_name" content={siteConfig.title} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageAbs} />
    <meta property="og:image:alt" content={fullTitle} />
    <meta property="og:locale" content="id_ID" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageAbs} />
    <meta name="twitter:site" content={siteConfig.twitter ?? "@twotworial"} />

    <!-- Favicon & sitemap -->
    <link rel="icon" href={withBase("/TwotworialSQ.webp")} />
    <link rel="sitemap" href={withBase("/sitemap-index.xml")} />

    <!-- Fonts: Inter lokal sudah di-load via /styles/fonts.css -->

    <!-- RSS -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title={siteConfig.title + " - RSS Feed"}
      href={new URL(withBase("/rss.xml"), siteBase).href}
    />

    <!-- JSON-LD: Breadcrumb (no UI) -->
    {showBreadcrumbJSONLD && (
      <script type="application/ld+json" is:inline>
        {JSON.stringify(breadcrumbJSONLD).replace(/</g, "\\u003c")}
      </script>
    )}

    <!-- JSON-LD: Website & Organization -->
    <script type="application/ld+json" is:inline>
      {JSON.stringify(websiteJSONLD).replace(/</g, "\\u003c")}
    </script>
    <script type="application/ld+json" is:inline>
      {JSON.stringify(organizationJSONLD).replace(/</g, "\\u003c")}
    </script>

    {Astro.head}
  </head>

  <body>
    <main class="w-full min-h-screen">
      <div class="mx-auto max-w-3xl px-4">
        <Nav activePage={activePage} />
        <slot />
        {showSubscribeForm && <Subscribe class="my-12 w-full" />}
        <Footer />
      </div>
    </main>
  </body>
</html>
