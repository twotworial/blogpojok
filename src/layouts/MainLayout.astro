---
import "../styles/global.css";

import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
import Subscribe from "../components/Subscribe.astro";
import { withBase } from "../utils/helpers";
import siteConfig from "../site.config";

type Crumb = { name: string; href: string };

type LayoutProps = {
  pageTitle: string;
  activePage: string;
  showSubscribeForm?: boolean;
  description?: string;
  image?: string;
  noindex?: boolean;
  /** Opsional: pakai untuk menimpa judul crumb terakhir (mis. judul artikel). */
  breadcrumbTitle?: string;
};

const {
  pageTitle,
  activePage,
  showSubscribeForm = true,
  description = siteConfig.description,
  image = siteConfig.image?.src ?? "/TwotworialSQ.webp",
  noindex = false,
  breadcrumbTitle,
} = Astro.props as LayoutProps;

const fullTitle = `${pageTitle} â€¢ ${siteConfig.title}`;
const canonicalUrl = new URL(Astro.url, Astro.site ?? siteConfig.website).href;

/* =========================
   Breadcrumb builder
   ========================= */
const path = Astro.url.pathname.replace(/\/+$/,"") || "/";
const segments = path.split("/").filter(Boolean); // ["blog","slug"] dsb.

function humanize(seg: string) {
  return seg
    .replace(/-/g, " ")
    .replace(/\b\w/g, (m) => m.toUpperCase());
}

const crumbs: Crumb[] = [{ name: "Home", href: new URL("/", Astro.site ?? siteConfig.website).href }];

// Tambah level berikutnya dari segments
if (segments.length > 0) {
  // Akumulasi href absolut
  let acc = "";
  segments.forEach((seg, idx) => {
    acc += `/${seg}`;
    const isLast = idx === segments.length - 1;
    const name = isLast
      ? (breadcrumbTitle || pageTitle || humanize(seg))
      : humanize(seg);
    const href = new URL(acc, Astro.site ?? siteConfig.website).href;
    crumbs.push({ name, href });
  });
}

// Jangan tampilkan breadcrumb di beranda
const showBreadcrumb = path !== "/";

// JSON-LD BreadcrumbList
const breadcrumbJSONLD = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": crumbs.map((c, i) => ({
    "@type": "ListItem",
    "position": i + 1,
    "name": c.name,
    "item": c.href
  }))
};
---

<!doctype html>
<html lang="id" class="antialiased break-words">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <meta name="generator" content={Astro.generator} />

    <!-- Title & Meta Description -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />

    <!-- Canonical -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Robots -->
    {noindex ? (
      <>
        <meta name="robots" content="noindex,nofollow,max-image-preview:large" />
        <meta name="googlebot" content="noindex,nofollow" />
      </>
    ) : (
      <>
        <meta
          name="robots"
          content="index,follow,max-snippet:-1,max-image-preview:large,max-video-preview:-1"
        />
        <meta name="googlebot" content="index,follow" />
      </>
    )}

    <!-- Open Graph -->
    <meta property="og:site_name" content={siteConfig.title} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={withBase(image)} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={withBase(image)} />
    <meta name="twitter:site" content={siteConfig.twitter ?? "@twotworial"} />

    <!-- Favicon & sitemap -->
    <link rel="icon" href={withBase("/TwotworialSQ.webp")} />
    <link rel="sitemap" href={withBase("/sitemap-index.xml")} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Sigmar&family=Kanit:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap"
      rel="stylesheet"
    />

    <!-- RSS -->
    <link
      rel="alternate"
      type="application/rss+xml"
      title={siteConfig.title + " - RSS Feed"}
      href={new URL(withBase("/rss.xml"), Astro.site ?? siteConfig.website)}
    />

    <!-- JSON-LD: Breadcrumb -->
    {showBreadcrumb && (
      <script type="application/ld+json">
        {JSON.stringify(breadcrumbJSONLD)}
      </script>
    )}

    {Astro.head}
  </head>

  <body>
    <main id="swup" class="w-full min-h-screen">
      <div class="mx-auto max-w-3xl px-4">
        <Nav activePage={activePage} />

        {/* Breadcrumb markup (hanya tampil selain halaman beranda) */}
        {showBreadcrumb && (
          <nav class="my-4 text-sm" aria-label="Breadcrumb">
            <ol class="flex flex-wrap items-center gap-2">
              {crumbs.map((c, i) => {
                const isLast = i === crumbs.length - 1;
                return (
                  <li class="inline-flex items-center gap-2">
                    {i > 0 && <span aria-hidden="true">/</span>}
                    {isLast ? (
                      <span class="text-black dark:text-whitesmoke" aria-current="page">{c.name}</span>
                    ) : (
                      <a href={c.href} class="text-gray-600 hover:text-black dark:text-gray-300 dark:hover:text-whitesmoke">
                        {c.name}
                      </a>
                    )}
                  </li>
                );
              })}
            </ol>
          </nav>
        )}

        <slot />

        {showSubscribeForm && <Subscribe class="my-12 w-full" />}
        <Footer />
      </div>
    </main>
  </body>
</html>
